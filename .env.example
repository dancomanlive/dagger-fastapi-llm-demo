# Dagger needs credentials for the underlying LLM Provider (e.g., OpenAI)
# Replace with your actual OpenAI API Key
OPENAI_API_KEY=

# Optional: Define the model to use
LLM_MODEL="gpt-4o" # Or gpt-4, gpt-3.5-turbo, etc.

# DAGGER_CLOUD_TOKEN is used to authenticate with Dagger Cloud
DAGGER_CLOUD_TOKEN=

DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=
# Superlinked connection
SUPERLINKED_URL= # Leave empty if no API key is required
SUPERLINKED_API_KEY= # Leave empty if no API key is required

QDRANT_URL=http://qdrant:6333
QDRANT_URL_FOR_DAGGER=http://host.docker.internal:6333
QDRANT_API_KEY=  # Leave empty if no API key is required

# Retriever Service Configuration for Pattern 2 deployment
RETRIEVER_SERVICE_URL=http://localhost:8001  # For access from the host
RETRIEVER_SERVICE_URL_FOR_CALLER=http://retriever-service:8000  # For container-to-container access
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"  # Model for the retriever service
PAYLOAD_TEXT_FIELD_NAME="document"  # Field in Qdrant payload that contains the document text
